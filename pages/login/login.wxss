.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 100%;
  background-color: #fff;
}

.container .welcome {
  width: 100%;
  height: 400rpx;
  line-height: 400rpx;
  margin-bottom: 30rpx;
  text-align: center;
  background-color: #e60026;
  border-radius: 0 0 150% 150% / 0 0 40% 40%;
}

.container .welcome .iconfont {
  font-size: 160rpx;
  color: white;
}

.container .phone,
.container .password {
  display: flex;
  height: 50rpx;
  line-height: 50rpx;
  margin: 40rpx 0;
}

.container .phone label,
.container .password label {
  width: 100rpx;
  text-align: right;
}

.container .phone input,
.container .password input {
  height: 50rpx;
  line-height: 50rpx;
  margin-left: 20rpx;
  padding: 0 20rpx;
  border: 1px solid #eee;
  border-radius: 25rpx;
  caret-color: #e60026;
}

.container button {
  margin-top: 50rpx;
  background-color: #e60026;
  color: white;
  font-weight: normal;
  letter-spacing: 10rpx;
  border-radius: 64rpx;
}
