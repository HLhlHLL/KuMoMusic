.container .search-wrap {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx 0;
  background-color: #fff;
}

.container .search-wrap .search-input-wrap {
  flex: 1;
  display: flex;
}

.container .search-wrap .search-input-wrap .icon-wangyiyunyinle {
  line-height: 60rpx;
  font-size: 40rpx;
  color: #e60026;
}

.container .search-wrap .search-input-wrap .input-wrap {
  flex: 1;
  position: relative;
  margin-left: 20rpx;
}

.container .search-wrap .search-input-wrap .input-wrap .search-input {
  padding: 8rpx 16rpx;
  background-color: #eee;
  border-radius: 25rpx;
  color: #999;
  text-align: center;
}

.container .banner {
  padding: 30rpx;
  background-color: #fff;
}

.container .banner .swiper-wrap {
  border-radius: 20rpx;
  overflow: hidden;
}

.container .banner .swiper-wrap image {
  width: 100%;
  height: 100%;
}

.container .nav {
  display: flex;
  padding: 0 30rpx;
  background-color: #fff;
}

.container .nav .nav-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 20rpx;
  text-align: center;
}

.container .nav .nav-item .list-icon {
  width: 90rpx;
  height: 90rpx;
  margin-bottom: 10rpx;
  line-height: 90rpx;
  font-size: 50rpx;
  border-radius: 50%;
  color: #e60026;
  background-color: rgba(230, 0, 38, 0.1);
}

.container .nav .nav-item .list-text {
  font-size: 28rpx;
  color: #666;
}

.container .recommend-playlist {
  padding: 0 30rpx;
  border-top: 1px solid #eee;
  background-color: #fff;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
}

.container .recommend-playlist .option-btn {
  height: 40rpx;
  line-height: 40rpx;
  border: 1px solid #999;
  border-radius: 20rpx;
  padding: 0 6rpx 0 16rpx;
}

.container .recommend-playlist .option-btn .btn-text {
  font-size: 28rpx;
  vertical-align: top;
}

.container .recommend-playlist .option-btn .iconfont {
  font-size: 28rpx;
  vertical-align: top;
}

.container .recommend-playlist .m-list scroll-view {
  display: flex;
  height: 300rpx;
}

.container .toplist-wrap {
  margin-top: 20rpx;
  padding: 0 30rpx 30rpx;
  background-color: #fff;
  border-radius: 20rpx;
}

.container .toplist-wrap .option-btn {
  height: 40rpx;
  line-height: 40rpx;
  border: 1px solid #999;
  border-radius: 20rpx;
  padding: 0 6rpx 0 16rpx;
}

.container .toplist-wrap .option-btn .btn-text {
  font-size: 28rpx;
}

.container .toplist-wrap .option-btn .iconfont {
  font-size: 28rpx;
}

.container .toplist-wrap swiper {
  height: 500rpx;
}

.container .toplist-wrap swiper-item {
  padding: 10rpx;
  box-sizing: border-box;
}

.container .toplist-wrap .toplist {
  padding: 0 20rpx 20rpx;
  border: 1px solid #eee;
  border-radius: 20rpx;
  box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.2);
}

.container .toplist-wrap .toplist .header-desc {
  font-size: 26rpx;
  color: #999;
}

.container .toplist-wrap .toplist .m-item {
  display: flex;
  margin-bottom: 20rpx;
}

.container .toplist-wrap .toplist .m-item .cover {
  width: 90rpx;
  height: 90rpx;
}

.container .toplist-wrap .toplist .m-item .cover image {
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
}

.container .toplist-wrap .toplist .m-item .m-desc {
  display: flex;
  align-items: center;
  width: 500rpx;
}

.container .toplist-wrap .toplist .m-item .m-desc .order {
  width: 50rpx;
  text-align: center;
}

.container .toplist-wrap .toplist .m-item .m-desc .music-info .music-name {
  max-width: 400rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.container .toplist-wrap .toplist .m-item .m-desc .music-info .music-author {
  max-width: 400rpx;
  font-size: 24rpx;
  color: #999;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.container .toplist-wrap .toplist .m-item .m-desc .tag {
  width: 50rpx;
  text-align: center;
  font-size: 24rpx;
}
