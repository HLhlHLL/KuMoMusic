.play-list {
  position: relative;
  display: flex;
  align-items: center;
  padding: 10rpx 30rpx;
  background-color: #fff;
}

.play-list .cover {
  width: 100rpx;
  height: 100rpx;
}

.play-list .cover image {
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
}

.play-list .desc {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  height: 100rpx;
  margin-left: 20rpx;
}

.play-list .desc .title {
  font-size: 28rpx;
}

.play-list .desc .count {
  font-size: 24rpx;
  color: #999;
}

.play-list .model {
  position: absolute;
  top: 50%;
  right: 30rpx;
  transform: translateY(-50%);
  display: flex;
  height: 40rpx;
  line-height: 40rpx;
  padding: 0 10rpx;
  font-size: 24rpx;
}

.play-list .model .btn-text {
  vertical-align: middle;
}

.play-list .border {
  border: 1px solid #999;
  border-radius: 20rpx;
}
