.song-item {
  display: flex;
  justify-content: space-between;
  width: 100%;
}

.song-item .m-desc {
  display: flex;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
}

.song-item .m-desc .music-name {
  max-width: 400rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.song-item .m-desc .music-name.active {
  color: #e60026;
}

.song-item .m-desc .author-name {
  max-width: 200rpx;
  margin-left: 20rpx;
  font-size: 24rpx;
  color: #999;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.song-item .delete-song {
  line-height: 80rpx;
  font-size: 50rpx;
  color: #999;
}
