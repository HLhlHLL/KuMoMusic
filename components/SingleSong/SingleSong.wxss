.m-item {
  display: flex;
  align-items: center;
  height: 100rpx;
  margin: 10rpx 0;
}

.m-item .cover {
  width: 90rpx;
  height: 90rpx;
}

.m-item .cover image {
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
}

.m-item .name-author {
  flex: 1;
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
}

.m-item .name-author .name {
  display: flex;
  width: 100%;
}

.m-item .name-author .name .name-origin,
.m-item .name-author .name .name-translation {
  max-width: 240rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.m-item .name-author .name .name-translation {
  color: #999;
}

.m-item .name-author .author {
  display: flex;
  margin-top: 4rpx;
  font-size: 24rpx;
  color: #999;
}

.m-item .name-author .author .ar-name,
.m-item .name-author .author .reference {
  max-width: 220rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.m-item .name-author .author .ar-name {
  margin-right: 10rpx;
}

.m-item .name-author .author .reference {
  margin-left: 10rpx;
}

.m-item .item-options {
  display: flex;
}

.m-item .item-options .play-mv,
.m-item .item-options .more {
  color: #999;
  margin: 0 8rpx;
}
